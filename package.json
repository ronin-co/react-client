{
  "name": "@ronin/react",
  "version": "0.1.2",
  "type": "module",
  "description": "React components for use with RONIN.",
  "publishConfig": {
    "access": "public"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "lint": "bun run --bun lint:tsc && bun run --bun lint:biome",
    "lint:biome": "biome check --error-on-warnings",
    "lint:tsc": "tsc --pretty",
    "format": "biome check --write && biome format --write",
    "test": "bun test",
    "build": "tsup ./src/index.ts --dts-resolve --format esm",
    "prepare": "bun run build"
  },
  "keywords": [
    "react",
    "database",
    "orm",
    "components"
  ],
  "author": "ronin",
  "license": "Apache-2.0",
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@types/bun": "1.2.1",
    "@types/react": "18.3.1",
    "msw": "2.8.6",
    "react": "18.3.1",
    "tsup": "8.5.0",
    "typescript": "5.8.3"
  },
  "peerDependencies": {
    "react": ">=18.3.1",
    "ronin": ">=6.6.13",
    "@ronin/compiler": ">=0.18.7"
  }
}
